{% extends 'base.html.twig' %}

{% block title %}Option index{% endblock %}

{% block content %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-2">
				{{ include ('Admin/_toolBar.html.twig')}}
			</div>
			<div class="col-sm-10">
				<div class="">
					<h1>Option index</h1>
					<table class="table">
						<thead>
							<tr>
								<th>Id</th>
								<th>Name</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
						{% for option in options %}
							<tr>
								<td>{{ option.id }}</td>
								<td>{{ option.name }}</td>
								<td>
									<a href="{{ path('option_show', {'id': option.id}) }}">show</a>
									<a href="{{ path('option_edit', {'id': option.id}) }}">edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">no records found</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
					<a href="{{ path('option_new') }}" class="btn btn-primary">Create new</a>
				</div>
			</div>
		</div>
		
		
		
	
		
	</div>
   
{% endblock %}
