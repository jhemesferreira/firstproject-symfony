<button type="button" class="btn btn-danger ml-1" data-toggle="modal" data-target="#modal{{ id }}">
	Supprimer
</button>

<!-- Modal -->
<div class="modal fade" id="modal{{ id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				Etes-vous sur de vouloir supprimer "{{ title }}"? 
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<form method="POST" action="{{ path('admin.property.delete', { id: id} ) }}" class="ml-2">
					<input type="hidden" name="_method" value="DELETE">
					<input type="hidden" name="_token" value="{{	csrf_token('delete' ~ id) 	}}">
					<button type="submit" class="btn btn-danger">Confirmer</button>
				</form>
				
			</div>
		</div>
	</div>
</div>
